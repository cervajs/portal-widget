script(src="//webrtc.voxbone.com/js/voxbone-0.0.4.js")
script(src=docRoot+"/javascripts/widget-0.2.js")
script.
    var supported = voxbone.WebRTC.isWebRTCSupported();

    function makeCall(){
        var config = { 'callerId': !{request.path=='/widget'? JSON.stringify(request.query.callerId) : "myScope.callerId"},
                       'dial_pad': !{request.path=='/widget'? JSON.stringify(request.query.dialPad.toString()) : "myScope.dial_pad.toString()"},
                       'context': !{request.path=='/widget'? JSON.stringify(request.query.context) : "myScope.context"},
                       'send_digits': !{request.path=='/widget'? JSON.stringify(request.query.sendDigits) : "myScope.send_digits"},
                       'ibc': !{request.path=='/widget'? JSON.stringify(request.query.incompatibleBrowserConfiguration)  : "myScope.incompatible_browser_configuration"},
                       'link_button_to_a_page_value': !{request.path=='/widget'? JSON.stringify(request.query.linkButtonToAPageValue) : "myScope.link_button_to_a_page_value"},
                       'number': !{JSON.stringify(request.query.e164)},
                       'supported': !{request.path=='/widget'? "supported" : "myScope.preview_webrtc_compatible"}
                     };

        VoxWidget.makeCall(config);
    };

if request.query.authUrl
    script.
        $(document).ready(function () {
            if(!supported) {
                !{request.query.incompatibleBrowserConfiguration=='show_text_html' ? "$('#launch_call').hide();$('#not-supported-message').removeClass('hidden');":""}
                !{request.query.incompatibleBrowserConfiguration=='hide_widget' ? "$('.widget-box').hide();":""}
            } else {
                voxbone.WebRTC.init(voxrtc_config);
            }
        });
else if request.query.basic_auth == 1
    script.
        $(document).ready(function () {
            if(!supported) {
                !{request.query.incompatibleBrowserConfiguration=='show_text_html' ? "$('.widget-box').hide();$('#not-supported-message').removeClass('hidden');":""}
                !{request.query.incompatibleBrowserConfiguration=='hide_widget' ? "$('.widget-box').hide();":""}
            } else {
                var username = !{JSON.stringify(request.query.login)};
                var secret = !{JSON.stringify(request.query.password)};
                voxbone.WebRTC.basicAuthInit(username, secret);
                voxbone.WebRTC.customEventHandler.authExpired= function() { voxbone.WebRTC.basicAuthInit(username, secret);};
            }
        });

.not-supported.hidden#not-supported-message
    | !{request.path=='/widget'? request.query.showTextHtmlValue : "{{show_text_html_value}}"}
